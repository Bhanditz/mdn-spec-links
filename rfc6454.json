                    "notes": "Not sent with <code>POST</code> requests, see <a href='https://developer.microsoft.com/en-us/microsoft-edge/platform/issues/10482384/'>bug 10482384</a>.",
                    "version_added": true
                },
                "edge_mobile": {
                    "version_added": true
                },
